<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.MainFragment"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >
                
                <ImageView
                    android:id="@+id/time_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:alpha="0.8"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#30000000"
            >
                <TextView
                    android:id="@+id/good_morning_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Good Morning Kariuki"
                    android:textStyle="normal"
                    android:textColor="#fff"
                    android:textSize="26sp"
                    android:layout_margin="20dp"/>

        </RelativeLayout>
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/send_to_many_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_group"

                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Send to many"
                            android:textStyle="bold"
                            android:textColor="#000"/>
                </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/copy_paste_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/iv"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_copy"
                                    android:layout_margin="10dp"/>

                                <TextView
                                    android:id="@+id/message_txt"
                                    android:layout_toRightOf="@id/iv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Please Renew message"
                                    android:textStyle="bold"
                                    android:layout_centerVertical="true"
                                    android:textColor="#000"/>

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/message_switch_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="end"
                                    android:textOff="OFF"
                                    android:textOn="ON"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"


                                    />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/copy_paste_layout_hidden"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            >
                                <EditText
                                    android:id="@+id/et"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="20dp"
                                    android:text=""
                                    />

                                <Button
                                    android:id="@+id/btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/cardviewbutton"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="40dp"
                                    android:text="SAVE"
                                    android:textColor="#fff"
                                    android:layout_marginBottom="20dp"
                                    android:layout_below="@id/et"
                                    android:textStyle="bold"
                                    />
                        </RelativeLayout>
                </LinearLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/bonga_points_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="@dimen/space10"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/points"

                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Bonga Points"
                            android:textStyle="bold"
                            android:textColor="#000"/>
                </LinearLayout>
        </androidx.cardview.widget.CardView>



</LinearLayout>

</ScrollView>