<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/phone_iv"
        android:drawableTint="@color/black"
        android:text="0715353311"
        android:gravity="center"
        android:drawablePadding="@dimen/space10"
        android:textColor="@color/black"
        android:layout_margin="@dimen/space10"/>

    <TextView
        android:id="@+id/amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_tv"
        android:drawableLeft="@drawable/amount_iv"
        android:drawableTint="@color/black"
        android:text="99"
        android:gravity="center"
        android:drawablePadding="@dimen/space10"
        android:textColor="@color/black"
        android:layout_margin="@dimen/space10"/>

    <ImageButton
        android:id="@+id/remove_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/remove_iv"
        android:tint="@color/colorPrimaryDark"
        android:layout_marginRight="@dimen/space10"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/amount_tv"
        android:layout_marginTop="@dimen/space10"
        android:background="#20000000"/>
</androidx.constraintlayout.widget.ConstraintLayout>